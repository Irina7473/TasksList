<Window x:Class="TasksListWpfApp.ChangingеTasksWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TasksListWpfApp"
        mc:Ignorable="d"
        Title="Что сделать с задачей?" Height="100" Width="400">
    <Window.Resources>
        <ResourceDictionary Source="Style.xaml"/>
    </Window.Resources>

    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button IsDefault="True" Click="Delete_Click" Style="{DynamicResource style_Button_dialog}">Удалить</Button>
            <Button IsDefault="True" Click="Change_Click" Style="{DynamicResource style_Button_dialog}">Изменить</Button>
            <Button IsCancel="True" Style="{DynamicResource style_Button_dialog}">Отмена</Button>
        </StackPanel>
    </Grid>
</Window>
