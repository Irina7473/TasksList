<Window x:Class="TasksListWpfApp.ExitWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TasksListWpfApp"
        mc:Ignorable="d"
        Title="Выход" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen" >
    <Grid Margin="10">
        <TextBlock>Вы хотите выйти из программы?</TextBlock>
        <WrapPanel HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button IsDefault="True" Click="Accept_Click" MinWidth="60" Margin="10">OK</Button>
            <Button IsCancel="True" MinWidth="60" Margin="10">Отмена</Button>
        </WrapPanel>            
    </Grid>
</Window>
