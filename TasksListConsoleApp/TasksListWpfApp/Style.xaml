<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">    
    <Style x:Key="style_Button" TargetType="Button">
        <Style.Triggers>
            <MultiDataTrigger>
                <MultiDataTrigger.Conditions>
                    <Condition Binding="{Binding ElementName=input_Name, Path=Text}" Value="" />
                    <Condition Binding="{Binding ElementName=input_Age, Path=Text}" Value="" />
                </MultiDataTrigger.Conditions>
                <MultiDataTrigger.Setters>
                    <Setter Property="IsEnabled" Value="False" />
                </MultiDataTrigger.Setters>
            </MultiDataTrigger>
        </Style.Triggers>
        <Setter Property="Background" Value="LightSteelBlue" />
        <Setter Property="FontSize" Value="15" />
        <Setter Property="Foreground" Value="Black" />
        <Setter Property="Width" Value="150" />
        <Setter Property="Height" Value="30" />
        <Setter Property="Margin" Value="20" />
    </Style>

    <Style x:Key="style_Button_Color" TargetType="Button">
        <Style.Triggers>
            <MultiDataTrigger>
                <MultiDataTrigger.Conditions>
                    <Condition Binding="{Binding ElementName=input_Name, Path=Text}" Value="" />
                    <Condition Binding="{Binding ElementName=input_Age, Path=Text}" Value="" />
                </MultiDataTrigger.Conditions>
                <MultiDataTrigger.Setters>
                    <Setter Property="IsEnabled" Value="False" />
                </MultiDataTrigger.Setters>
            </MultiDataTrigger>
        </Style.Triggers>        
        <Setter Property="Width" Value="100" />
        <Setter Property="Height" Value="20" />        
    </Style>

    <Style x:Key="style_CheckBox" TargetType="CheckBox">
        <Style.Triggers>
            <MultiDataTrigger>
                <MultiDataTrigger.Conditions>
                    <Condition Binding="{Binding ElementName=input_Name, Path=Text}" Value="" />
                    <Condition Binding="{Binding ElementName=input_Age, Path=Text}" Value="" />
                </MultiDataTrigger.Conditions>
                <MultiDataTrigger.Setters>
                    <Setter Property="IsEnabled" Value="False" />
                </MultiDataTrigger.Setters>
            </MultiDataTrigger>
        </Style.Triggers>        
        <Setter Property="Height" Value="30" />
        <Setter Property="Margin" Value="20" />
    </Style>

    <Style x:Key="style_ListView" TargetType="{x:Type ListViewItem}">        
         <Style.Triggers>
            <DataTrigger Binding="{Binding Importance}" Value="1">
                        <Setter Property="Background" Value="Blue" />
            </DataTrigger>
            <DataTrigger Binding="{Binding Importance}" Value="2">
                <Setter Property="Background" Value="Yellow" />
            </DataTrigger>
            <DataTrigger Binding="{Binding Importance}" Value="3">
                <Setter Property="Background" Value="Red" />
            </DataTrigger>
         </Style.Triggers>
    </Style>    
    
    

</ResourceDictionary>